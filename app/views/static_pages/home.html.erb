<%= provide(:title, "みんなのオススメ") %>

<% if logged_in? %>
  <div class="row">
    <div class="col-md-1"></div>
    
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <% if current_user.image? %>
            <%= image_tag current_user.image.url, class: "user_image" %>
          <% else %>
            <%= image_tag asset_path('default.jpeg', :width =>'50', :height =>'50', :alt => '画像'), class: "user_image" %>
          <% end %>
          <%= link_to current_user.name, user_path(current_user) %>
        </h1>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-6">
      <h3>みんなのおすすめ</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    </div>
    
    <div class="col-md-1"></div>
  </div>
<% else %>    
  <div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8 center-block">
      <h3 class="text-center">みんなのおすすめ</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    </div>
    
    <div class="col-md-2"></div>
  </div>
<% end %>
