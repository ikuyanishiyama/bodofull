<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <%= render "layouts/header" %>

    <div class="cover">
      <div class="cover-inner">
        <div class="cover-contents">
          <h1>みんなのおすすめボードゲーム</h1>
            <!--<% unless logged_in? %>-->
              <!--<%= link_to 'モノリストを始める', signup_path, class: 'btn btn-success btn-lg' %>-->
            <!--<% end %>-->
        </div>
      </div>
    </div>
    
    <div class="container">
      <% flash.each do |messages_type, message| %>
        <div class="alert alert-<%= messages_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= render "layouts/footer" %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
